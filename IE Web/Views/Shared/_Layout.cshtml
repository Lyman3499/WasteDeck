                                            </ul>
                                        </li>
                                        <li><a href="~/Home/Contact">Contact</a></li>
                                        <!--
                                        <li><a href="~/Home#start"><span class="d-inline-block bg-primary text-white btn btn-primary">Get Test</span></a></li>
                                        -->
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Bootstrap Navigation menu-->


        <div>
            @RenderBody()
            <hr />
            <!--Footer Section-->
            <footer class="site-footer bg-dark">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <h3 class="footer-heading mb-4 text-white">Brand Vision</h3>
                            <p>We are committed to establish a sustainable world that values and conserves environment.</p>
                            
                        </div>
                        <div class="col-md-4 mb-4 mb-md-0 ml-auto">
                            <h3 class="footer-heading mb-4 text-white">Quick Menu</h3>
                            <ul class="list-unstyled">
                                <li><a href="~/Home">Home</a></li>
                                <li><a href="~/Home/About">About</a></li>
                                <li><a href="~/Home/Vendor">Services</a></li>
                                <li><a href="~/Home/Contact">Contact</a></li>
                            </ul>
                        </div>
