                            <h3 class="footer-heading mb-4 text-white">PokaCarbon Members</h3>
                            <ul class="list-unstyled">
                                <li>Tanya Shipley</li>
                                <li>Maria Baturina</li>
                                <li>Tanmay Dalvi</li>
                                <li>Yan Li</li>
                            </ul>
                        </div>
                        <div class="col-md-12 copyright-block text-center">
                            <p>Copyright © @DateTime.Now.Year Team PokaCarbon. All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </footer>
            <!--Footer Section-->
        </div>
    </div>
    <a id="go-top-button"></a>


    <!--jQuery Scripts-->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("scripts", required: false)
    <!--jQuery Scripts-->
    <!--JQuery Script for Bin show and hide on Waste Seperation Page-->
    <script>

        $(".yellow-bin").click(function () {
            $(".yellow-bin-content").toggle("slow");
        });


        $(".green-bin").click(function () {
            $(".green-bin-content").toggle("slow");
        });

        $(".red-bin").click(function () {
            $(".red-bin-content").toggle("slow");
        });

        $(".purple-bin").click(function () {
            $(".purple-bin-content").toggle("slow");
        });
    </script>


    <!--JQuery Script for Bin show and hide on Waste Seperation Page-->
    <script src="~/js/Go-top-button.js"></script>
