@{
    ViewBag.Title = "Contact";
}
<!DOCTYPE html>
<div class="site-wrap">
    <div class="site-blocks-cover inner-page overlay" style="background-image: url(~/images/hero_1.jpg);"  data-stellar-background-ratio="0.5">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-5 text-center">
                <h1 class="text-uppercase">Contact</h1>
                <span class="caption d-block text-white">Free Templates by<a href="#">Colorlib</a></span>
            </div>
        </div>
    </div>

    <div class="slant-1"></div>

    <div class="site-section first-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8 mb-5">

                    <form action="#" class="p-5 bg-white">

                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="font-weight-bold" for="fullname">Full Name</label>
                                <input type="text" id="fullname" class="form-control" placeholder="Full Name">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="font-weight-bold" for="email">Email</label>
                                <input type="email" id="email" class="form-control" placeholder="Email Address">
                            </div>
                        </div>


                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="font-weight-bold" for="phone">Phone</label>
                                <input type="text" id="phone" class="form-control" placeholder="Phone #">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="font-weight-bold" for="message">Message</label>
                                <textarea name="message" id="message" cols="30" rows="5" class="form-control" placeholder="Tell us what are you thinking"></textarea>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Send Message" class="btn btn-primary text-white px-4 py-2">
                            </div>
                        </div>


                    </form>
                </div>

                <div class="col-lg-4">
                    <div class="p-4 mb-3 bg-white">
                        <h3 class="h5 text-black mb-3">Contact Info</h3>
                        <p class="mb-0 font-weight-bold">Address</p>
                        <p class="mb-4">Monash Campus, Caufield, Mebourne, VIC, AU</p>

                        <p class="mb-0 font-weight-bold">Phone</p>
                        <p class="mb-4">+61 400 404 004</p>

                        <p class="mb-0 font-weight-bold">Email Address</p>
                        <p class="mb-0">ylii0093@student.moansh.edu</p>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



