@{
    ViewBag.Title = "Home";
}

<link href="https://fonts.googleapis.com/css?family=Merriweather:400,900,900i" rel="stylesheet">
<div class="site-wrap">
    <!--Homepage Banner Block-->
    <div class="home-banner">
        <div class="home-banner-block"></div>
        <div class="banner-text-block">
            <h1 class="banner_text_color">Reduce Your Carbon Footprint with eco-friendly habits</h1>
        </div>
    </div>
    <!--Homepage Banner Block-->
    <!--Homepage Vendor Block-->
    <div class="site-section first-section hero-function" style="">
        <div class="container">
            <!--Homepage Vendor Short Description-->
            <div class="col-md-12 text-center">
                <p class="font-secondary text-uppercase font-weight-bold">Did you know that the plastic used in food <br /> packaging has a huge impact on carbon emissions?</p>
                <h1 class="site-section-heading font-secondary">Take your first step by choosing eco-friendly food</h1>
            </div>
            <!--Homepage Vendor Short Description-->
        </div>
        <!--Homepage Vendor Search Section-->
        <div class="py-3 bg-primary">
            <div class="container">
                <div class="row">
                    <form class="form-search col-md-12">
                        <div class="row border-responsive">
                            <div class=" col-md-4">
                                <h5 class="text-uppercase text-white mb-4 category-label" for="offer-types">Select Category</h5>
                                <select name="category" style="height:40px;width:200px;margin-bottom:20px">
                                    <option value="">All</option>
                                    <option value="Baby food">Baby food</option>
                                    <option value="Bakery">Bakery</option>
                                    <option value="Bee-products">Bee products</option>
                                    <option value="Cafe">Cafe</option>
                                    <option value="Canned food">Canned food</option>
                                    <option value="Coffee">Coffee</option>
                                    <option value="Condinments">Condinments</option>
                                    <option value="Dairy">Dairy</option>
                                    <option value="Deli">Deli</option>
                                    <option value="Dry products">Dry products</option>
                                    <option value="Eggs">Eggs</option>
                                    <option value="Fruits">Fruits</option>
                                    <option value="Grains">Grains</option>
                                    <option value="HerbsN`Tea">HerbsN`Tea</option>
                                    <option value="Meat">Meat</option>
                                    <option value="Nuts">Nuts</option>
                                    <option value="Oil">Oil</option>
                                    <option value="asta and Noodles">Pasta and Noodles</option>
                                    <option value="Sauces">Sauces</option>
                                    <option value="Seafood">Seafood</option>
                                    <option value="Sweets">Sweets</option>
                                    <option value="Soy">Soy</option>
                                    <option value="Vegetables">Vegetables</option>
                                    <option value="Vinegar">Vinegar</option>
                                    <option value="Wine">Wine</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <h5 class="text-uppercase text-white mb-4 postcode-label">Postcode</h5>
                                <input type="text" name="postcode" class="form-control" placeholder="Postcode">
                            </div>

                            <div class="col-md-4 text-center">
                                <!--<h5 class="text-uppercase text-white mb-4"><br /></h5>-->

                                <input type="submit" class="btn btn-bg-primary font-secondary text-uppercase" value="Search">
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--Homepage Vendor Search Section-->
    </div>
    <!--Homepage Vendor Block-->
    <!--Homepage Service Slider Block-->
    <div id="service" class="site-section services-slider-block">
        <div class="container">

            <div class="row">
                <div class="col-md-12 text-center">
                    <span class="caption d-block mb-2 font-secondary font-weight-bold">Services</span>
                    <h2 class="site-section-heading font-secondary">Establish a sustainable world with us</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 block-13 nav-direction-white">
                    <div class="nonloop-block-13 owl-carousel">

                        <div class="media-image">
                            <img src="~/images/img_5.jpg" alt="Image" class="img-fluid">
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">Impact of Plastic</h2>
                                <p>Knowledge of the problems of plastic waste</p>
                                <center><a href="~/Home/Plastic_Impact" class="btn btn-primary text-white px-4">Learn More</a></center>
                            </div>
                        </div>

                        <div class="media-image">
                            <img src="~/images/plastic_alternative_slider.jpg" alt="Image" class="img-fluid">
                            <div class="media-image-body">

                                <h2 class="font-secondary text-uppercase">Plastic Alternatives</h2>
                                <p>Learn to use alternatives instead of plastics</p>
                                <center><a href="~/Home/Plastic_Alternative" class="btn btn-primary text-white px-4">Learn More</a></center>
                            </div>
                        </div>

                        <div class="media-image">
                            <img src="~/images/organic_vendor.jpg" alt="Image" class="img-fluid">
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">Search Eco-Friendly Shop</h2>
                                <p>Find Eco-Friendly Shop on Map nearby location</p>
                                <center><a href="~/Home/Vendor" class="btn btn-primary text-white px-4">Search Now</a></center>
                            </div>
                        </div>

                        <div class="media-image">
                            <img src="~/images/bin_classification_slider.jpg" alt="Image" class="img-fluid pic4">
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">Bin Classification</h2>
                                <p>Different colors for the correct use of trash cans posters</p>
                                <center><a href="~/Home/Waste_Seperation" class="btn btn-primary text-white px-4">Learn More</a></center>
                            </div>
                        </div>

                        <div class="media-image">
                            <img src="~/images/avoid_food_waste_slider.jpg" alt="Image" class="img-fluid pic4">
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">Avoid Food Waste</h2>
                                <p>Learn the methods to reduce food waste</p>
                                <center><a href="~/Home/Avoid_Food_Waste" class="btn btn-primary text-white px-4">Learn More</a></center>
                            </div>
                        </div>

                        <div class="media-image">
                            <img src="~/images/composting_bin_slider.jpg" alt="Image" class="img-fluid pic4" />
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">Composting</h2>
                                <p>Learn how to use food scraps to create compost</p>
                                <center><a href="~/Home/Composting" class="btn btn-primary text-white px-4">Learn More</a></center>
                            </div>
                        </div>

                        <div class="media-image">
                            <img src="~/images/pot_farm_slider.jpg" alt="Image" class="img-fluid pic4" />
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">Pot Farming</h2>
                                <p>Learn how to grow your own food at home</p>
                                <center><a href="~/Home/Pot_Farming" class="btn btn-primary text-white px-4">Learn More</a></center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Homepage Service Slider Block-->
</div>